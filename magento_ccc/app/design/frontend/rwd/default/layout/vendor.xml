        </reference>
        <reference name="my.account.wrapper">
            <block type="vendor/product_attribute_group_edit" name="vendor_attribute_group_edit" template="vendor/product/attribute/group/edit.phtml"/>
        </reference>

        <!-- <reference name="left">
          <action method="unsetChild"><name>left.permanent.callout</name></action>
        </reference> -->
