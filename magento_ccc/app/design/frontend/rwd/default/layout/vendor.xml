<?xml version="1.0"?>

<layout version="0.1.0">
    <default>
        <reference name="top.links">
            <action method="addLink" translate="label title" module="vendor">
                <label>Register As Vendor</label>
                <url helper="vendor/getRegisterUrl"/>
                <title>Register</title>
                <prepare />
                <urlParams />
                <position>300</position>
            </action>
        </reference>
    </default>

    <vendor_logged_in>
        <reference name="top.links">
            <action method="removeLinkByUrl">
                <url helper="vendor/getRegisterUrl" />
            </action>
            <action method="addLink" translate="label title" module="vendor">
                <label>Log Out From Vendor</label>
                <url helper="vendor/getLogoutUrl" />
                <title>Log Out</title>
                <prepare />
                <urlParams />
                <position>400</position>
            </action>
        </reference>
    </vendor_logged_in>

     <vendor_logged_out>
        <reference name="top.links">
            <action method="addLink" translate="label title" module="vendor">
                <label>Login As Vendor</label>
                <url helper="vendor/getAccountUrl" />
                <title>Login</title>
                <prepare />
                <urlParams />
                <position>500</position>
            </action>
        </reference>
    </vendor_logged_out>

    <vendor_account_login translate="label">
        <label>Vendor Account Login Form</label>
        <!-- Mage_vendor -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/form_login" name="vendor_form_login" template="vendor/form/login.phtml" />
        </reference>
    </vendor_account_login>

<!--
Layout for vendor log out page
-->

    <vendor_account_logoutsuccess translate="label">
        <label>Vendor Account Logout Success</label>
        <!-- Mage_vendor -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="vendor_logout" template="vendor/logout.phtml"/>
        </reference>
    </vendor_account_logoutsuccess>

<!--
New vendor registration
-->

    <vendor_account_create translate="label">
        <label>Vendor Account Registration Form</label>
        <!-- Mage_vendor -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/form_register" name="vendor_form_register" template="vendor/form/register.phtml">
                <block type="page/html_wrapper" name="vendor.form.register.fields.before" as="form_fields_before" translate="label">
                    <label>Form Fields Before</label>
                </block>
            </block>
        </reference>
    </vendor_account_create>

    <vendor_account_forgotpassword translate="label">
        <label>vendor Forgot Password Form</label>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="head">
            <action method="setTitle" translate="title" module="vendor"><title>Forgot Your Password</title></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
            <action method="setHeaderTitle" translate="title" module="vendor"><title>Password forgotten</title></action>
        </reference>
        <reference name="content">
            <!--<block type="core/template" name="forgotPassword" template="vendor/form/forgotpassword.phtml"/>-->
            <block type="vendor/account_forgotpassword" name="forgotPassword" template="vendor/form/forgotpassword.phtml" />
        </reference>
    </vendor_account_forgotpassword>

    <vendor_account_changeforgotten translate="label">
        <label>Reset a Password</label>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="head">
            <action method="setTitle" translate="title" module="vendor">
                <title>Reset a Password</title>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
            <action method="setHeaderTitle" translate="title" module="vendor">
                <title>Reset a Password</title>
            </action>
        </reference>
        <reference name="content">
            <block type="vendor/account_changeforgotten" name="changeForgottenPassword" template="vendor/form/resetforgottenpassword.phtml"/>
        </reference>
    </vendor_account_changeforgotten>

    <vendor_account_confirmation>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
            <action method="setHeaderTitle" translate="title" module="vendor"><title>Send confirmation link</title></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="accountConfirmation" template="vendor/form/confirmation.phtml"/>
        </reference>
    </vendor_account_confirmation>

    <vendor_account_edit>
        <update handle="vendor_account" />
        <reference name="content">
            <block type="vendor/form_edit" name="vendor_form_edit" template="vendor/form/edit.phtml" />
        </reference>
    </vendor_account_edit>

<!--
vendor account pages, rendered for all tabs in dashboard
-->

    <vendor_account translate="label">
        <label>vendor My Account (All Pages)</label>
        <!--remove name="catalog.compare.sidebar"/>
        <remove name="sale.reorder.sidebar"/-->
        <!-- Mage_vendor -->
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
            <action method="addBodyClass"><class>vendor-account</class></action>
        </reference>

        <reference name="content">
            <block type="page/html_wrapper" name="my.account.wrapper" translate="label">
                <label>My Account Wrapper</label>
                <action method="setElementClass"><value>my-account</value></action>
            </block>
        </reference>

        <reference name="left_first">
            <block type="vendor/account_navigation" name="vendor_account_navigation" before="-" template="vendor/account/navigation.phtml">
                <action method="addLink" translate="label" module="vendor"><name>account</name><path>vendor/account/</path><label>Account Dashboard</label></action>
                <action method="addLink" translate="label" module="vendor"><name>account_edit</name><path>vendor/account/edit/</path><label>Account Information</label></action>
               <!--  <action method="addLink" translate="label" module="vendor"><name>address_book</name><path>vendor/address/</path><label>Address Book</label></action> -->
                <action method="addLink" translate="label" module="vendor"><name>product</name><path>vendor/product/grid</path><label>Manage Product</label></action>
                <action method="addLink" translate="label" module="vendor"><name>group</name><path>vendor/group/grid/</path><label>Manage Group</label></action>
                <action method="addLink" translate="label" module="vendor"><name>product_attribute</name><path>vendor/attribute/grid/</path><label>Manage Product Attribute</label></action>
            </block>
        </reference>
        <reference name="left">
            <!--<block type="checkout/cart_sidebar" name="cart_sidebar" template="checkout/cart/sidebar.phtml">-->
                <!--<action method="addItemRender"><type>simple</type><block>checkout/cart_item_renderer</block><template>checkout/cart/sidebar/default.phtml</template></action>-->
                <!--<action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/cart/sidebar/default.phtml</template></action>-->
                <!--<action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/cart/sidebar/default.phtml</template></action>-->
            <!--</block>-->
           <!--  <block type="catalog/product_compare_sidebar" name="catalog.compare.sidebar" template="catalog/product/compare/sidebar.phtml"/>
            <remove name="tags_popular"/>
 -->
        </reference>
    </vendor_account>

<!--
vendor account home dashboard layout
-->

    <vendor_account_index translate="label">
        <label>vendor My Account Dashboard</label>
        <update handle="vendor_account"/>
        <!-- Mage_vendor -->
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="vendor/account_dashboard" name="vendor_account_dashboard" template="vendor/account/dashboard.phtml">
                <block type="vendor/account_dashboard_hello" name="vendor_account_dashboard_hello" as="hello" template="vendor/account/dashboard/hello.phtml"/>
                <block type="core/template" name="vendor_account_dashboard_top" as="top" />
                <block type="vendor/account_dashboard_info" name="vendor_account_dashboard_info" as="info" template="vendor/account/dashboard/info.phtml"/>
                <block type="vendor/account_dashboard_newsletter" name="vendor_account_dashboard_newsletter" as="newsletter" template="vendor/account/dashboard/newsletter.phtml"/>
                <block type="vendor/account_dashboard_address" name="vendor_account_dashboard_address" as="address" template="vendor/account/dashboard/address.phtml"/>
            </block>
        </reference>

    </vendor_account_index>

    

    <vendor_group_grid>
        <update handle="vendor_account"/>
        <reference name="content">
            <block type="vendor/group_grid" name="vendor_group_grid" template="vendor/group/grid.phtml" />
        </reference>
    </vendor_group_grid>

    <vendor_group_add>
        <update handle="vendor_account"/>
        <reference name="content">
            <block type="vendor/group_form" name="vendor_group_form" template="vendor/group/form.phtml"/>
        </reference>

    </vendor_group_add>

    <vendor_attribute_grid>
        <update handle="vendor_account"/>
        <reference name="content">
            <block type="vendor/attribute_grid" name="vendor_attribute_grid" template="vendor/attribute/grid.phtml" />
        </reference>
    </vendor_attribute_grid>

    <vendor_attribute_edit>
        <update handle="vendor_account"/>
        <reference name="content">
            <block type="vendor/attribute_edit" name="vendor_attribute_edit" template="vendor/attribute/edit.phtml" />
        </reference>
    </vendor_attribute_edit>

    <vendor_product_grid>
        <update handle="vendor_account" />
        <reference name="content">
            <block type="vendor/product_grid" name="vendor_product_grid" template="vendor/product/grid.phtml" />
        </reference>
    </vendor_product_grid>

    <vendor_product_edit>
        <update handle="vendor_account" />
        <reference name="head">
            <action method="addJs"><script>/mage/adminhtml/tabs.js</script></action>
            <action method="addJs"><script>/mage/adminhtml/events.js</script></action>
      </reference>
        <reference name="left" >
            <block type="vendor/product_tabs" name="vendor_widget_tabs" />
        </reference>
        <reference name="content">
            <block type="vendor/product_edit" name="vendor_product_edit" template="vendor/product/edit.phtml" />
        </reference>
    </vendor_product_edit>
</layout>