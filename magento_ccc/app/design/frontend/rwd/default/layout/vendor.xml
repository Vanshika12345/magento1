            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/product_attribute_grid" name="attribute_grid" template="vendor/product/attribute/grid.phtml"/>
        </reference>
    </vendor_product_attribute_index>

    <vendor_product_attribute_edit translate="label">
        <label>My Attributes</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/product_attribute_edit" name="attribute_grid" template="vendor/product/attribute/edit.phtml"/>
        </reference>
    </vendor_product_attribute_edit>

    <vendor_product_attribute_group_index translate="label">
        <label>My Attribute Group</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/product_attribute_group_grid" name="attribute_grid" template="vendor/product/attribute/group/grid.phtml"/>
        </reference>
