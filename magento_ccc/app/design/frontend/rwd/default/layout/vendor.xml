<?xml version="1.0"?>
<layout version="0.0.1">

<!--
Default layout, loads most of the pages
-->

   <default>
         
        <reference name="top.links">
            <action method="addLink" translate="label title" module="vendor">
                <label>My Vendor Account</label>
                <url helper="vendor/getAccountUrl" />
                <title>My Vendor Account</title>
                <prepare />
                <urlParams />
                <position>200</position>
            </action>
            <action method="addLink" translate="label title before_text" module="vendor">
                <label>Vendor Register</label>
                <url helper="vendor/getRegisterUrl" />
                <title>Vendor Register</title>
                <prepare />
                <urlParams />
                <position>201</position>
                <li />
                <a />
            </action>
        </reference>
    </default>
<!--
Load this update on every page when vendor is logged in
-->


      <vendor_logged_in>
        <reference name="top.links">
            <action method="addLink" translate="label title" module="vendor"><label>Vendor Log Out</label><url helper="vendor/getLogoutUrl" /><title>Vendor Log Out</title><prepare /><urlParams /><position>100</position></action>
        </reference>
    </vendor_logged_in>

    <vendor_logged_out>
        <reference name="top.links">
            <action method="addLink" translate="label title" module="vendor"><label>Vendor Log In</label><url helper="vendor/getLoginUrl" /><title>Vendor Log In</title><prepare /><urlParams /><position>100</position></action>
        </reference>
        <remove name="reorder"></remove>
    </vendor_logged_out>

  

<!--
Layout for vendor login page
-->

    <vendor_account_login translate="label">
        <label>Vendor Account Login Form</label>
        <!-- Mage_Customer -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/form_login" name="vendor_form_login" template="vendor/form/login.phtml" />
        </reference>
    </vendor_account_login>

<!--
Layout for vendor log out page
-->

    <vendor_account_logoutsuccess translate="label">
        <label>Vendor Account Logout Success</label>
        <!-- Mage_Customer -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="vendor_logout" template="vendor/logout.phtml"/>
        </reference>
    </vendor_account_logoutsuccess>

<!--
New vendor registration
-->

    <vendor_account_create translate="label">
        <label>Vendor Account Registration Form</label>
        <!-- Mage_Customer -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/form_register" name="vendor_form_register" template="vendor/form/register.phtml">
                <block type="page/html_wrapper" name="vendor.form.register.fields.before" as="form_fields_before" translate="label">
                    <label>Form Fields Before</label>
                </block>
            </block>
        </reference>
    </vendor_account_create>

    <vendor_account_forgotpassword translate="label">
        <label>Vendor Forgot Password Form</label>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="head">
            <action method="setTitle" translate="title" module="vendor"><title>Forgot Your Password</title></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
            <action method="setHeaderTitle" translate="title" module="vendor"><title>Password forgotten</title></action>
        </reference>
        <reference name="content">
            <!--<block type="core/template" name="forgotPassword" template="vendor/form/forgotpassword.phtml"/>-->
            <block type="vendor/account_forgotpassword" name="forgotPassword" template="vendor/form/forgotpassword.phtml" />
        </reference>
    </vendor_account_forgotpassword>

    <vendor_account_changeforgotten translate="label">
        <label>Reset a Password</label>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="head">
            <action method="setTitle" translate="title" module="vendor">
                <title>Reset a Password</title>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
            <action method="setHeaderTitle" translate="title" module="vendor">
                <title>Reset a Password</title>
            </action>
        </reference>
        <reference name="content">
            <block type="vendor/account_changeforgotten" name="changeForgottenPassword" template="vendor/form/resetforgottenpassword.phtml"/>
        </reference>
    </vendor_account_changeforgotten>

    <vendor_account_confirmation>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
            <action method="setHeaderTitle" translate="title" module="vendor"><title>Send confirmation link</title></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="accountConfirmation" template="vendor/form/confirmation.phtml"/>
        </reference>
    </vendor_account_confirmation>

    <vendor_account_edit translate="label">
        <label>Vendor Account Edit Form</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="vendor"><title>Edit Account Info</title></action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="vendor/form_edit" name="vendor_edit" template="vendor/form/edit.phtml"/>
        </reference>

        <reference name="left">
          <action method="unsetChild"><name>left.permanent.callout</name></action>
        </reference>
    </vendor_account_edit>

<!--
Customer account pages, rendered for all tabs in dashboard
-->

    <vendor_account translate="label">
        <label>Vendor My Account (All Pages)</label>
        <!--remove name="catalog.compare.sidebar"/>
        <remove name="sale.reorder.sidebar"/-->
        <!-- Mage_Customer -->
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
            <action method="addBodyClass"><class>vendor-account</class></action>
        </reference>

        <reference name="content">
            <block type="page/html_wrapper" name="my.account.wrapper" translate="label">
                <label>My Account Wrapper</label>
                <action method="setElementClass"><value>my-account</value></action>
            </block>
        </reference>

        <reference name="left_first">
            <block type="vendor/account_navigation" name="vendor_account_navigation" before="-" template="vendor/account/navigation.phtml">
                <action method="addLink" translate="label" module="vendor"><name>account</name><path>vendor/account/</path><label>Account Dashboard</label></action>
                <action method="addLink" translate="label" module="vendor"><name>account_edit</name><path>vendor/account/edit/</path><label>Account Information</label></action>
                <action method="addLink" translate="label" module="vendor"><name>manage_product</name><path>vendor/product/</path><label>Manage Products</label></action>
                <action method="addLink" translate="label" module="vendor"><name>manage_attribute</name><path>vendor/product_attribute/</path><label>Manage Attributes</label></action>
                <action method="addLink" translate="label" module="vendor"><name>manage_attribute_group</name><path>vendor/product_attribute_group/</path><label>Manage Attribute Group</label></action>
            </block>
        </reference>
    </vendor_account>

<!--
Customer account home dashboard layout
-->

    <vendor_account_index translate="label">
        <label>Vendor My Account Dashboard</label>
        <update handle="vendor_account"/>
        <!-- Mage_Customer -->
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="vendor/account_dashboard" name="vendor_account_dashboard" template="vendor/account/dashboard.phtml">
                <block type="vendor/account_dashboard_hello" name="vendor_account_dashboard_hello" as="hello" template="vendor/account/dashboard/hello.phtml"/>
                <block type="core/template" name="vendor_account_dashboard_top" as="top" />
            </block>
        </reference>
    </vendor_account_index>

<!--
Customer account address book
-->

    <vendor_address_index translate="label">
        <label>Customer My Account Address Book</label>
        <!-- Mage_Customer -->
        <update handle="vendor_account"/>
        <reference name="my.account.wrapper">
            <block type="vendor/address_book" name="address_book" template="vendor/address/book.phtml"/>
        </reference>
    </vendor_address_index>

    <vendor_product_index translate="label">
        <label>My Products</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/product_grid" name="product_grid" template="vendor/product/grid.phtml"/>
        </reference>
    </vendor_product_index>

    <vendor_product_edit translate="label">
        <label>My Products</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference> 
        <reference name="head">
             <!-- <action method="addLinkRel"><rel>stylesheet</rel><href>https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css</href></action> -->

           <!--  <action method="addJs"><rel>text/javascript</rel><href>https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js</href></action>  -->

            <action method="addJs"><script>/mage/adminhtml/tabs.js</script></action>
            <action method="addJs"><script>/mage/adminhtml/events.js</script></action>

            <!-- <action method="addJs"><rel>text/javascript</rel><href>https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js</href></action>  -->

      </reference>
        <reference name="left">
            <block type="vendor/product_edit_tabs" name="product_edit_tabs" />
        </reference>
        <reference name="content">
            <block type="vendor/product_edit" name="product_edit" template="vendor/product/edit.phtml"/>
        </reference>
    </vendor_product_edit>
 
    <vendor_product_attribute_index translate="label">
        <label>My Attributes</label>
        <update handle="vendor_account"/>
