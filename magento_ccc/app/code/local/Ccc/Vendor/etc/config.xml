<config>
	
	<modules>
		<Ccc_Vendor>
			<version>1.0.9</version>
		</Ccc_Vendor>
	</modules>

	<global>
		<models>
	        <vendor>
	            <class>Ccc_Vendor_Model</class>
	            <resourceModel>vendor_resource</resourceModel>
	        </vendor>

	        <vendor_resource>
	            <class>Ccc_Vendor_Model_Resource</class>
	            <entities>
	                <vendor>
	                    <table>vendor</table>
	                </vendor>
	                <vendor_datetime>
	                	<table>vendor_datetime</table>
		            </vendor_datetime>
		            <vendor_decimal>
		                <table>vendor_decimal</table>
		            </vendor_decimal>
		            <vendor_int>
		                <table>vendor_int</table>
		            </vendor_int>
		            <vendor_text>
		                <table>vendor_text</table>
		            </vendor_text>
		            <vendor_varchar>
		                <table>vendor_varchar</table>
		            </vendor_varchar>
		            <vendor_char>
		                <table>vendor_char</table>
		            </vendor_char>
		            <eav_attribute>
                        <table>vendor_eav_attribute</table>
                    </eav_attribute>
                    <vendor_group>
                    	<table>vendor_product_group</table>
                    </vendor_group>
                    <product>
                    	<table>vendor_product_entity</table>
                    </product>
           			<product_eav_attribute>
                    	<table>vendor_product_eav_attribute</table>
                    </product_eav_attribute>
                </entities>
		    </vendor_resource>
		</models>

		<resources>
            <vendor_setup>
                <setup>
                    <module>Ccc_Vendor</module>
                    <class>Ccc_Vendor_Model_Resource_Setup</class>
                </setup>
            </vendor_setup>
        </resources>

		<helpers>
			<vendor>
				<class>Ccc_Vendor_Helper</class>
			</vendor>
		</helpers>

		<blocks>
			<vendor>
				<class>Ccc_Vendor_Block</class>
			</vendor>
		</blocks>
		<events>
			<controller_action_layout_load_before>
				<observers>
					<vendor_is_logged_in>
						<class>vendor/observer</class>
						<method>beforeLoadLayout</method>
					</vendor_is_logged_in>
				</observers>
			</controller_action_layout_load_before>
			<!-- <sales_model_service_quote_submit_after>
				<observers>
					<restore_vendor_group_id>
						<class>vendor/observer</class>
						<method>quoteSubmitAfter</method>
					</restore_vendor_group_id>
				</observers>
			</sales_model_service_quote_submit_after> -->
		</events>
	</global>

	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<ccc_vendor>Ccc_Vendor_Adminhtml</ccc_vendor>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>

	<adminhtml>
	    <layout>
	      <updates>
	        <vendor>
	          <file>vendor.xml</file>
	        </vendor>
	      </updates>
	    </layout>
  	</adminhtml>

  	<frontend>
        <secure_url>
            <vendor>/vendor/</vendor>
        </secure_url>
        <routers>
            <vendor>
                <use>standard</use>
                <args>
                    <module>Ccc_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </vendor>
        </routers>
        <layout>
            <updates>
                <vendor module="Ccc_Vendor">
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>
    </frontend>

</config>
	